<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- PROPERTIES -->
    <Properties>
        <Property name="logdir">/usr/local/var/log/clipfarmer</Property>
        <Property name="outputdir">/usr/local/var/log/clipfarmer/output</Property>
    </Properties>

    <!-- APPENDERS -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%level] %t [%logger{1}] - %msg%n" />        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- Example of a specific logger -->
        <Logger name="com.apa.clipfarmer" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
